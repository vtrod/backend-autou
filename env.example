# Configurações do AutoU Email Classifier Backend

# Configurações básicas
APP_NAME="AutoU Email Classifier API"
APP_VERSION="1.0.0"
DEBUG=true

# Servidor
HOST=0.0.0.0
PORT=8000

# CORS - Adicione as URLs do frontend
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:3001"]

# IA e Processamento
MODEL_NAME="distilbert-base-uncased"
MAX_CONTENT_LENGTH=10000
CONFIDENCE_THRESHOLD=0.7

# Arquivos
MAX_FILE_SIZE=10485760  # 10MB em bytes
ALLOWED_FILE_TYPES=["txt","pdf"]

# Banco de dados (futuro)
DATABASE_URL="sqlite:///./emails.db"

# Logs
LOG_LEVEL="INFO"

# OpenAI Configuration
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-3.5-turbo"
USE_OPENAI=true
